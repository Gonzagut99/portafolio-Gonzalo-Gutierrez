---
type cardImages = {
    imgSrc:string
    menuItemTitle:string
    href?:string
    id?:string
}
const menuCards:cardImages[] = [
    {
        imgSrc:'/menu_cards/experiencia.webp',
        menuItemTitle:'Experiencia',
        href:'/experiencia'
    },
    {
        imgSrc:'/menu_cards/proyectos.webp',
        menuItemTitle:'Proyectos',
        href:'/proyectos'
    },
    {
        imgSrc:'/menu_cards/about_me.webp',
        menuItemTitle:'Skills y Educaci√≥n',
        href:'/sobre_mi'
    },
    {
        imgSrc:'/menu_cards/contacto.webp',
        menuItemTitle:'Contacto',
        id:"contact-form-button"
    }
] 
---

<div class="image-menu w-full grid grid-cols-1 sm:grid-cols-3 sm:grid-rows-1 lg:grid-cols-4 gap-4 max-w-[700px] lg:max-w-none">
    {
        menuCards.map(({imgSrc,menuItemTitle,href,id})=>( 
            //tarjeta de contacto   
            id&&!href?(<a class="cursor-pointer hidden lg:block" id="contact-card">
                <figure class="cursor-pointer relative aspect-[43/8] sm:aspect-video transition ease-in-out delay-150 hover:scale-[1.03] duration-300">
                    <div class="transition ease-in-out duration-200 rounded-lg absolute w-full h-full flex justify-center items-center bg-[#1b1b28]/30 backdrop-brightness-[.25] hover:backdrop-brightness-75 text-gray-200/80 hover:text-gray-200 font-bold">
                        <span class="text-2xl sm:text-3xl md:text-4xl lg:text-2xl">{menuItemTitle}</span>
                    </div>
                    <img class="rounded-lg absolute -z-10 aspect-[43/8] sm:aspect-video w-full object-cover" src={imgSrc} alt={menuItemTitle}>
                
                </figure>
            </a>):(<a href={href}>
                <figure class="cursor-pointer relative aspect-[43/8] sm:aspect-video transition ease-in-out delay-150 hover:scale-[1.03] duration-300">
                    <div class="transition ease-in-out duration-200 rounded-lg absolute w-full h-full flex justify-center items-center text-center bg-[#1b1b28]/30 backdrop-brightness-[.25] hover:backdrop-brightness-75 text-gray-200/80 hover:text-gray-200 font-bold">
                        <span class="text-2xl sm:text-3xl md:text-4xl lg:text-2xl">{menuItemTitle}</span>
                    </div>
                    <img class="rounded-lg absolute -z-10 aspect-[43/8] sm:aspect-video w-full object-cover" src={imgSrc} alt={menuItemTitle}>
                
                </figure>
            </a>)
        ))
    }
</div>
