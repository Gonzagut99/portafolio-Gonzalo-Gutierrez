---
import Layout from '../../layouts/Layout.astro';
import SectionContainer from '../../components/SectionContainer.astro';
import CodeIcon from '../../components/icons/Code.astro';
import Projects from '../../components/Projects.astro';

import { PROJECTS } from "../../components/projectTypes";

export const prerender = true
const { id } = Astro.params


export const getStaticPaths = (() => {
	return PROJECTS.map((project)=>({
        params:{id:project.id}
    }));
});

let projectFound = PROJECTS.find((project)=>id==project.id);
console.log(typeof id)
---

<Layout 
title=`Gonzalo Gutiérrez - Proyecto ${projectFound!.id}`
description="Contrata a Gonzalo Gutiérrez (@gonza_dvui) Trainee fullstack en desarrollo web y móvil. Diseñador UX/UI. De Arequipa, Perú. Apasionado por crear aplicaciones significativas y desafiantes."
>
	<main id=`${projectFound!.id}` class="px-4 mb-auto pt-12">
		<SectionContainer id="projects" class="py-6 sm:py-16 lg:py-14 2xl:py-16 flex flex-col gap-y-2 sm:gap-y-3 md:gap-y-4 lg:gap-y-5">
			<h2 class="text-gray-200/90 text-3xl font-semibold mb-6 flex gap-x-2 self-center">
				<CodeIcon class="size-9"></CodeIcon>
				Proyectos
			</h2>
			<Projects project={projectFound!}></Projects>
		</SectionContainer>

	</main>
</Layout>